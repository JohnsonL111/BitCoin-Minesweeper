<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cmpt276.assignments.assignment3">

<!--    https://stackoverflow.com/questions/37085753/android-studio-image-asset-launcher-icon-background-color -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bitcoin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bitcoin_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.NoActionBar">

        <activity
            android:name=".ui.GameActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".ui.OptionsActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".ui.HelpActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".ui.MainMenuActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>